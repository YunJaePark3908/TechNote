<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TN_Network.NetworkAPI_Library.OKHttpExample">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asynchronousGet"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Asynchronous GET"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/synchronousGet"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/asynchronousGet"
            android:text="Synchronous GET"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/synchronousGet"
            android:layout_centerInParent="true"
            android:scrollbars="vertical"
            android:id="@+id/txtString" />
</RelativeLayout>
