<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:id="@+id/Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Layout"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>

    <Button
        android:id="@+id/Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Dialog, Activity, Fragment"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. BLE 연결"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Google Map"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. DataBase"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6. MediaRecord/MediaPlay/Camera"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7. File"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8. 서버연동"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9. 외부 Open Library"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/Button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10. Android UI OpenSource"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button9"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11. Jni"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/Button10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
    </LinearLayout>
</ScrollView>