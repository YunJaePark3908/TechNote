<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TN_Network.BoardUpload">
    <!--CoordinatorLayout : 액션바 영역을 포함한 전체 화면의 위치를 잡아주는 역할-->
    <!--//AppBarLayout-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/image_upload_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skyBlue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_upload_toolbar"
        android:background="@color/rippleColor" />

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollbar"
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/background_light"
        android:scrollbars="none"
        android:isScrollContainer="true">

        <LinearLayout
            android:id="@+id/upload_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:scaleType="fitStart"
                android:src="@drawable/network_board_upload_image_upload" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/path"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:scaleType="fitStart"
                android:src="@drawable/network_board_upload_image_upload" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/path"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:scaleType="fitStart"
                android:src="@drawable/network_board_upload_image_upload" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/path"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:scaleType="fitStart"
                android:src="@drawable/network_board_upload_image_upload" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/path"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:scaleType="fitStart"
                android:src="@drawable/network_board_upload_image_upload" />

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:background="@color/rippleColor"
        />

    <ImageView
        android:id="@+id/upload_click_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/network_board_upload_add_picture" />
    <LinearLayout
        android:id="@+id/subject_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subject_textview"
            android:layout_width="234dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/rippleColor"
            android:text="카테고리"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/network_board_upload_down" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:background="@color/rippleColor"
        />

    <TextView
        android:id="@+id/wonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="210dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/rippleColor"
        android:text="\u20A9"
        android:textSize="18dp" />
    <EditText
        android:id="@+id/etPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_marginStart="30dp"
        android:hint="가격"
        android:textColorHint="@color/rippleColor"
        android:inputType="number"
        android:maxLength="15"
        android:imeOptions="actionDone"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="245dp"
        android:background="@color/rippleColor"
        />
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="255dp"
        android:layout_marginStart="10dp"
        android:hint="제목"
        android:maxLength="20"
        android:textColorHint="@color/rippleColor"
        android:imeOptions="actionDone"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:background="@color/rippleColor"
        />

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_marginStart="10dp"
        android:maxLength="300"
        android:hint="상품설명"
        android:textColorHint="@color/rippleColor"
        android:imeOptions="actionDone"
        android:background="@null"/>

</RelativeLayout>